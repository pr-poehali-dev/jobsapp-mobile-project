{
  "tests": [
    {
      "name": "Отправка кода на email",
      "method": "POST",
      "path": "/?path=send-code",
      "body": {
        "contact": "test@example.com"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "contact_type": "email"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Проверка формата email",
      "method": "POST",
      "path": "/?path=send-code",
      "body": {
        "contact": "invalid-email"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
