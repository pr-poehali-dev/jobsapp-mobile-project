{
  "tests": [
    {
      "name": "Отправка кода на email с ролью (ожидается ошибка SMTP)",
      "method": "POST",
      "path": "/?path=send-code",
      "body": {
        "contact": "test@example.com",
        "role": "employer"
      },
      "expectedStatus": 500,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Проверка формата email",
      "method": "POST",
      "path": "/?path=send-code",
      "body": {
        "contact": "invalid-email"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Обновление роли без токена",
      "method": "POST",
      "path": "/?path=update-role",
      "body": {
        "role": "employer"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Админ-логин с неверным паролем",
      "method": "POST",
      "path": "/?path=login",
      "body": {
        "login": "test@example.com",
        "password": "wrong_password"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}